# ===============================
# Firebase (Backend / Crawler)
# ===============================

# Absolute path to the Firebase service account key JSON file.
# This file must exist locally and must NOT be committed to Git.
# Local example:
# /Users/yourname/Projects/job-tracker/lib/serviceAccountKey.json
# Production example:
# /etc/jobcrawler/serviceAccountKey.json
FIREBASE_SERVICE_ACCOUNT=/absolute/path/to/serviceAccountKey.json


# ===============================
# Firebase (Frontend - public)
# These values are safe to expose
# ===============================

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id


# ===============================
# Crawler configuration
# ===============================

# Maximum number of items per crawl run (0 = unlimited)
NEXT_PUBLIC_CLOSESPIDER_ITEMCOUNT=5


# ===============================
# Application URLs
# ===============================

# Base URL of the Next.js frontend
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Base URL of the FastAPI backend
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8000


# ===============================
# External APIs
# ===============================

# Public job / company APIs used by the crawler
NEXT_PUBLIC_COMPANY_API=https://www.jobs.ch/api/v1/public/company
NEXT_PUBLIC_JOB_API=https://www.jobs.ch/api/v1/public/search/job
